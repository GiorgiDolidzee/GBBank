<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6FF"
    tools:context=".ui.exchange.ExchangeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llExchange"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            app:layout_constraintTop_toTopOf="@id/llExchange"
            app:layout_constraintBottom_toBottomOf="@id/llExchange"
            app:layout_constraintStart_toStartOf="@id/llExchange"
            app:layout_constraintEnd_toStartOf="@id/spFrom"
            android:layout_marginStart="30dp"

            android:id="@+id/etInput"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:autofillHints="false"
            android:inputType="numberDecimal"
            tools:ignore="LabelFor" />

        <Spinner
            app:layout_constraintStart_toEndOf="@id/etInput"
            app:layout_constraintTop_toTopOf="@id/llExchange"
            app:layout_constraintBottom_toBottomOf="@id/llExchange"
            app:layout_constraintEnd_toStartOf="@id/spTo"
            android:layout_marginStart="10dp"

            android:id="@+id/spFrom"
            android:padding="15dp"
            android:layout_width="60dp"
            android:layout_height="40dp"/>

        <Spinner
            app:layout_constraintStart_toEndOf="@id/spFrom"
            app:layout_constraintTop_toTopOf="@id/llExchange"
            app:layout_constraintBottom_toBottomOf="@id/llExchange"
            app:layout_constraintEnd_toEndOf="@id/llExchange"
            android:layout_marginStart="10dp"

            android:id="@+id/spTo"
            android:padding="15dp"
            android:layout_width="60dp"
            android:layout_height="40dp"/>

        <Button
            app:layout_constraintBottom_toBottomOf="@id/llExchange"
            app:layout_constraintStart_toStartOf="@id/llExchange"
            app:layout_constraintEnd_toEndOf="@id/llExchange"

            android:id="@+id/btnConvert"
            android:layout_width="150dp"
            android:text="@string/convert"
            android:layout_height="70dp"/>

        <TextView
            app:layout_constraintBottom_toTopOf="@id/btnConvert"
            app:layout_constraintStart_toStartOf="@id/btnConvert"
            app:layout_constraintEnd_toEndOf="@id/btnConvert"

            tools:text="Lorem ipsum dolor set amet"
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/refresh"
        app:layout_constraintTop_toBottomOf="@+id/llExchange" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRates"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swipeRefresh" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>